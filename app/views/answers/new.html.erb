<div class="container">
    <div class="row">
      <div class="col-md-12 col-sm-12" id="content-wrapper" style='background: #fe9083;'>
        <div class="row">
          <div class="col-lg-12">

            <h1>Answer <%= @question.user.name%>'s Question</h1>
            <h2><%= @question.content%></h2>

            <div class="row">
              <div class="col-lg-12">
                <div class="main-box">
                  <%= form_for @answer do |f|%>
                    <div class="form-group">
                      <%= f.label 'Your Answer'%>
                      <%= f.text_area :content, :class=>'form-control', :rows=>'5'%>
                      <%= f.submit 'Submit your answer anonymously', :class=>'btn btn-primary'%>
                    </div>

                  <% end %>

                </div>
              </div>
            </div>

        </div>
      </div>
    </div>
  </div>
</div>
