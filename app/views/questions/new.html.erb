<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div id="login-box" style='background: #FE9083; border:none; margin-top: -20px;'>
        <div class="row">
          <div class="col-xs-12">
            <div id="login-box-inner" style='padding: 0px 0'>
              <!-- <img src="img/logo-login.png" alt="SuperheroAdmin" class="img-responsive" id="login-logo"/> -->
              <div id="login-logo">
                <%= image_tag 'mascara1.jpg'%>
                <h1 style="color: white;   font-family: 'simplifica'; padding-left: 0px">
                </h1>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
    <div class="row">
      <div class="col-md-12 col-sm-12" id="content-wrapper" style='background: #fe9083;'>
        <div class="row">
          <div class="col-lg-12" style='margin-top: -40px;'>

            <h1 style='color: white'>Friend's impression</h1>

            <div class="row">
              <div class="col-lg-12">
                <div class="main-box" style='background-color: transparent; -webkit-box-shadow: none; box-shadow: none'>
                  <%= form_for @question do |f|%>
                    <div class="form-group" style='text-align: center'>
                      <%= f.text_area :content, :class=>'form-control', :rows=>'5', :placeholder=>"Ask your friends Questions", :style=>'border-radius: 5px;'%>
                      <%= hidden_field_tag 'openid', @openid%>
                      <%= f.submit 'Submit your question', :class=>'btn btn-primary', :style=>'margin-top: 10px'%>
                    </div>

                  <% end %>

                </div>
              </div>
            </div>

        </div>
      </div>
    </div>
  </div>
</div>
